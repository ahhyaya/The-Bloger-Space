<div class="card">
  <div class="card-header flex-row justify-space-between">
    {{! <section id="single-post-container" class ="container"> }}

    <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
    <span>posted by
      {{post.user.username}}
      on
      {{format_date post.create_at}}</span>
  </div>
  <h5 id="post-content" class="card-body">
    {{post.content}}
  </h5>
</div>

<input type="hidden" name="post-id" id="post-id" value="{{post.id}}" />

<div class="comment-container card">
  <div class="card-header">
    <form
      class="card-body"
      id="comment-form"
      action="/posts/{{post.id}}/comments"
    >
      <label class="form-label">Comment: </label>
      <textarea
        id="comment-body"
        name="comment-body"
        class="comment-body form-input form-control"
      ></textarea>
      <button type="submit" class="btn">Submit</button>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>