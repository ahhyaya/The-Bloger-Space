<div class="card">
  <h4 class="card-header">Create New Post</h4>
  <form class="card-body new-post-form" id="new-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <div>
      <label for="post-title" class="form-lable">Post Title: </label>
      <br>
      <input type="text" id="post-title" name="post-title" class="form-input" />
    </div>
    <div>
      <label class="form-label">Post Content: </label>
      <br>
      <textarea
        type="text"
        name="post-content"
        class="form-input form-textarea"
        data-number="8"
        id="post-content">
      </textarea>
    </div>
    <br />
    <button type="submit" class="btn" id="creat-new-post-btn">Create</button>
    <br>
  </form>

</div>

<script src="/js/add-post.js"></script>