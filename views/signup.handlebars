<form id="signup-form" class="card-body">
  <div class="form-group">
    <label for="username-signup">Username</label>
    <input type="text" class="form-control" id="username-signup" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="password-signup">Password</label>
    <input type="password" class="form-control" id="password-signup">
  </div>
  <button type="submit" class="btn btn-primary">Signup</button>
  <a href="/login" class="login-link">Login instead</a>
</form>

<script src="../public/js/signup.js"></script>