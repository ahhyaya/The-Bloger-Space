<div class="card">
  <h4 class="card-header">New User Signup</h4>
  <form id="signup-form" class="card-body">
    <div class="form-group">
      <label for="username-signup">Username</label>
      <input
        type="text"
        class="form-control"
        id="username-signup"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="form-group">
      <label for="password-signup">Password</label>
      <input type="password" class="form-control" id="password-signup" />
    </div>
    <button
      type="submit"
      class="btn btn-primary"
      id="signup-btn"
    >Signup</button>
    <br />
    <br />
    <a href="/login" class="login-link">Login instead</a>
  </form>
</div>

<script src="/js/signup.js"></script>